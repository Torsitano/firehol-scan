{
    "compilerOptions": {
        "allowUnreachableCode": false,
        "esModuleInterop": true,
        "target": "ESNext",
        "module": "CommonJS",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "resolveJsonModule": true,
        "noEmitOnError": true,
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": true,
        "stripInternal": true,
        "outDir": "./dist",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/",
        "lib",
        "benchmarkTests"    ],
    "exclude": [
        "node_modules",
        "cdk.out"
    ],
    "typedocOptions": {
        "entryPoints": [
            "src/"
        ],
        "out": "docs/",
        "entryPointStrategy": "expand",
        "exclude": "**/node_modules/**"
    }
}
